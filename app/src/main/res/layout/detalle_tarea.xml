<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
   >

    <fragment
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        class="com.google.android.gms.maps.SupportMapFragment" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/d_tarea"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:textAlignment="center"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/map"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medidor: "
        android:id="@+id/textView"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:layout_below="@+id/d_tarea"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/d_medidor"
        android:textSize="15dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/textView"
        android:layout_alignBottom="@id/textView"/>

    <TextView
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre: "
        android:id="@+id/textView3"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:layout_below="@+id/d_medidor"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/d_nombre"
        android:textSize="15dp"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/textView3"
        android:layout_alignRight="@+id/d_medidor"
        android:layout_alignTop="@id/textView3"
        android:layout_alignBottom="@id/textView3"
        android:layout_alignEnd="@+id/d_medidor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CI: "
        android:layout_marginLeft="5dp"
        android:id="@+id/textView5"
        android:layout_below="@+id/d_nombre"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/d_ci"
        android:layout_toRightOf="@+id/textView5"
        android:textSize="15dp"
        android:layout_below="@+id/d_nombre"
        android:layout_alignRight="@+id/d_nombre"
        android:layout_alignEnd="@+id/d_nombre"
        android:layout_alignTop="@id/textView5"
        android:layout_alignBottom="@id/textView5"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dirección: "
        android:id="@+id/textView7"
        android:layout_below="@+id/d_ci"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:textColor="@color/colorAccent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="d_direcciondaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaasd"
        android:id="@+id/d_direccion"
        android:layout_toRightOf="@+id/textView7"
        android:textSize="15dp"
        android:layout_below="@+id/d_ci"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/textView7"
        android:layout_alignBottom="@id/textView7"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Razón Social: "
        android:id="@+id/textView9"
        android:layout_below="@+id/d_direccion"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:layout_marginLeft="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="d_razon"
        android:id="@+id/d_razon"
        android:layout_toRightOf="@+id/textView9"
        android:layout_below="@+id/d_direccion"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/textView9"
        android:layout_alignBottom="@id/textView9"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comentarios: "
        android:id="@+id/textView8"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:layout_below="@+id/d_razon"
        android:layout_marginLeft="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/d_comentarios"
        android:layout_below="@+id/d_razon"
        android:layout_toRightOf="@+id/textView9"
        android:textSize="15dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/textView8"
        android:layout_alignBottom="@id/textView8"/>

    <Button
        android:id="@+id/cancelar_boton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        android:text="SALIR"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textColor="@color/colorPrimary"
        android:textSize="16dp"
        android:layout_weight="1"
        android:layout_below="@+id/d_comentarios"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false" />


</RelativeLayout>