<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="@dimen/dialog_body">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="AquÃ­ va la pregunta"
        android:id="@+id/pregunta"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/respuesta"
        android:textSize="20dp"
        android:text="No indica"
        android:layout_below="@+id/pregunta"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:weightSum="1"
        android:layout_below="@+id/respuesta">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_weight="1" />

        <Button
            android:id="@+id/enviar_boton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CONFIRMAR"
            android:paddingTop="5dp"
            android:paddingBottom="10dp"
            android:textColor="@color/colorPrimary"
            android:layout_below="@+id/info_text2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:layout_alignRight="@+id/entrar_boton"
            android:layout_alignEnd="@+id/entrar_boton"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_weight="1"
            android:textSize="16dp"
            android:layout_marginRight="10dp" />

        <Button
            android:id="@+id/cancelar_boton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="10dp"
            android:text=" CANCELAR "
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textColor="@color/colorPrimary"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="16dp"
            android:layout_weight="1" />
    </LinearLayout>


</RelativeLayout>